<?xml version="1.0"?>
<config>
    <modules>
        <Taras_Contacts>
            <version>0.1.0</version>
        </Taras_Contacts>
    </modules>
    <frontend>
        <routers>
            <contacts>
                <use>standard</use>
                <args>
                    <module>Taras_Contacts</module>
                    <frontName>contacts</frontName>
                </args>
            </contacts>
        </routers>
        <translate>
            <modules>
                <Taras_Contacts>
                    <files>
                        <default>Taras_Contacts.csv</default>
                    </files>
                </Taras_Contacts>
            </modules>
        </translate>
        <layout>
            <updates>
                <contact>
                    <file>contacts.xml</file>
                </contact>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <contacts>
                <class>Taras_Contacts_Model</class>
                <resourceModel>contacts_mysql4</resourceModel>
            </contacts>
            <contacts_mysql4>
                <class>Taras_Contacts_Model_Mysql4</class>
                <entities>
                    <contacts>
                        <table>contact_us_records</table>
                    </contacts>
                </entities>
            </contacts_mysql4>
        </models>
        <resources>
            <taras_contacts_setup>
                <setup>
                    <module>Taras_Contacts</module>
                </setup>
            </taras_contacts_setup>
            <taras_contacts_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </taras_contacts_read>

            <taras_contacts_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </taras_contacts_write>
        </resources>
        <template>
            <email>
                <contacts_email_email_template translate="label" module="contacts">
                    <label>Contact Form</label>
                    <file>contact_form.html</file>
                    <type>text</type>
                </contacts_email_email_template>
            </email>
        </template>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Taras_Contacts>
                    <files>
                        <default>Taras_Contacts.csv</default>
                    </files>
                </Taras_Contacts>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <contacts>
            <contacts>
                <enabled>1</enabled>
            </contacts>
            <email>
                <recipient_email><![CDATA[hello@example.com]]></recipient_email>
                <sender_email_identity>custom2</sender_email_identity>
                <email_template>contacts_email_email_template</email_template>
            </email>
        </contacts>
    </default>
</config>